<resources>
    <!-- Base application theme. -->
    <style name="Theme.TranslateApp" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#51A6CD</item>
        <item name="colorPrimaryVariant">#E42525</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FFEB3B</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#673AB7</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.TranslateApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TranslateApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TranslateApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>