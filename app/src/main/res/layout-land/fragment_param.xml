<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFFFF"
    android:orientation="vertical"
    tools:context=".fragments.mainActivity.statistiques.StatistiquesFragment">

    <TextView
        android:id="@+id/paramTitleView"
        android:layout_width="146dp"
        android:layout_height="42dp"
        android:contentDescription="Paramètres"
        android:gravity="center"
        android:text="Paramètres"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/saveButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.08"
        tools:ignore="SpeakableTextPresentCheck" />

    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="172dp"
        android:layout_height="132dp"
        android:layout_centerHorizontal="true"
        android:labelFor="@id/paramTitleView"
        android:timePickerMode="spinner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/heureTxtView"
        app:layout_constraintStart_toStartOf="@+id/heureTxtView"
        app:layout_constraintTop_toBottomOf="@+id/heureTxtView"
        app:layout_constraintVertical_bias="0.26" />

    <TextView
        android:id="@+id/heureTxtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Heure d'exercice"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/paramTitleView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/paramTitleView"
        app:layout_constraintVertical_bias="0.112" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/light_purple"
        android:text="Sauvegarder"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.85" />

    <TextView
        android:id="@+id/NbNotifsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Nombre de\n notifications"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/paramTitleView"
        app:layout_constraintTop_toBottomOf="@+id/paramTitleView"
        app:layout_constraintVertical_bias="0.07999998" />

    <EditText
        android:id="@+id/nbNotifsEditText"
        android:layout_width="161dp"
        android:layout_height="48dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:text="Name"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/NbNotifsTextView"
        app:layout_constraintHorizontal_bias="0.50"
        app:layout_constraintStart_toStartOf="@+id/NbNotifsTextView"
        app:layout_constraintTop_toBottomOf="@+id/NbNotifsTextView"
        app:layout_constraintVertical_bias="0.26" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="230dp" />

</androidx.constraintlayout.widget.ConstraintLayout>

